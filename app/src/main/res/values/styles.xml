<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Item">
        <item name="android:textSize">@dimen/corpo</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">@android:color/black</item>
    </style>

    <style name="Corpo" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/corpo</item>
    </style>

    <style name="Corpo.Negrito" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Titulo">
        <item name="android:textSize">@dimen/titulo</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Piada">
        <item name="android:textSize">@dimen/titulo</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
</resources>