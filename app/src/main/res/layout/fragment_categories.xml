<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.categories.CategoriesFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:scrollbars="vertical"
        tools:listitem="@layout/categories_list" />

    <ImageView
        android:id="@+id/imgNoInternet_categories"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_no_internet"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/imgServerError_categories"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_server_error"
        android:layout_centerInParent="true"
        android:visibility="gone"
         />

    <ProgressBar
        android:id="@+id/progress_categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:translationZ="8dp" />

</RelativeLayout>